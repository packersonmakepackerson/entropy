-- fly cuz entropy is useless withought it
BlatantTab:AddButton({
	Name = "Flight",
	Callback = function()
          repeat wait() until game. Players.localPlayer.character

          local player = game. Players.LocalPlayer
          local character = player. character
          local humanoid = character: WaitForChild ("Humanoid") local torso = character: WaitForChild ("LowerTorso") local mouse = player: GetMouse ()
          local enabled = false

          mouse. KeyDown: Connect (function (key)
              if key == "W" then
                  if enabled == false then
                      enabled = true
                      local bodyvelocity = Instance.new("BodyVelocity", torso)
                      bodyvelocity.MaxForce = Vector3.new (math.huge,math.huge,math.huge)

                      while enabled == true do
                          bodyvelocity.Velocity = mouse.Hit.LookVector 100
                          wait()
                      end

                  end
             
                  if enabled == true then
                      enabled = false
                      torso:FindFiestChildOfClass("BodyVelocity"):Destroy()
                  end

              end
          end)
})
